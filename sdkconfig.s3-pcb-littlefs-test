# ESP32-S3 Custom PCB SDK Configuration
# Override ESP-IDF defaults for LittleFS compatibility

# LittleFS Configuration - Match mklittlefs defaults
CONFIG_LITTLEFS_BLOCK_SIZE=4096
CONFIG_LITTLEFS_PAGE_SIZE=256
CONFIG_LITTLEFS_LOOKAHEAD_SIZE=128
CONFIG_LITTLEFS_CACHE_SIZE=512
CONFIG_LITTLEFS_BLOCK_CYCLES=512

# Disable PSRAM completely
CONFIG_ESP32S3_SPIRAM_SUPPORT=n
CONFIG_SPIRAM=n
CONFIG_SPIRAM_BOOT_INIT=n
CONFIG_SPIRAM_USE_MEMMAP=n
CONFIG_SPIRAM_IGNORE_NOTFOUND=y

# Filesystem support
CONFIG_LITTLEFS_SDMMC_SUPPORT=n
CONFIG_LITTLEFS_USE_MTIME=y
CONFIG_LITTLEFS_SPIFFS_COMPAT=y
